<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/dp_750_100"
    xmlns:tools="http://schemas.android.com/tools">

    <View
        android:id="@+id/top_divider"
        android:layout_width="match_parent"
        android:layout_height="@dimen/divider"
        android:background="#dddddd"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/iv_item"
            android:layout_width="@dimen/dp_750_44"
            android:layout_height="@dimen/dp_750_44"
            android:layout_gravity="center_vertical"
            android:layout_marginRight="@dimen/dp_750_12"
            android:layout_marginEnd="@dimen/dp_750_12" />

        <TextView
            android:id="@+id/tv_item"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:includeFontPadding="false"
            tools:text="分享到朋友圈"
            android:textColor="#333333"
            android:textSize="@dimen/sp_750_36" />

    </LinearLayout>

</RelativeLayout>