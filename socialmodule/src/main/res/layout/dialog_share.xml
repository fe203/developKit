<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingLeft="@dimen/dp_750_20"
    android:paddingRight="@dimen/dp_750_20"
    android:paddingBottom="@dimen/dp_750_30">
    <LinearLayout
        xmlns:tool="http://schemas.android.com/tools"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:id="@+id/action_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:paddingTop="@dimen/dp_750_20"
            android:gravity="center_horizontal">

            <TextView
                android:id="@+id/text_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/sp_750_34"
                android:textColor="#333333"
                tool:text="吃吃吃"/>
            <TextView
                android:id="@+id/text_desc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_750_4"
                android:textColor="#999999"
                android:textSize="@dimen/size_smaller"
                tool:text="浪花一朵朵啊"/>
            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/divider"
                android:layout_marginTop="@dimen/dp_750_14"
                android:background="#dddddd" />

            <android.support.v4.view.ViewPager
                android:id="@+id/vp_share_list"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_750_390"
                android:paddingLeft="@dimen/dp_750_40"
                android:paddingRight="@dimen/dp_750_40"/>

            <com.lyne.uiview.viewpagerindicator.CirclePageIndicator
                android:id="@+id/share_indicator"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:layout_margin="@dimen/dp_750_23"
                android:padding="@dimen/dp_750_7"
                app:circleSize="@dimen/dp_750_7"
                app:fillColor="#1A000000"
                app:pageColor="#1A000000"
                app:iStrokeColor="#00000000"
                app:iStrokeWidth="@dimen/dp_750_2" />

        </LinearLayout>

        <TextView
            android:id="@+id/btn_cancel"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_750_96"
            android:layout_marginTop="@dimen/dp_750_30"
            android:gravity="center"
            android:textSize="@dimen/size_biggest"
            android:textColor="#333333"
            android:text="取消"/>

    </LinearLayout>
</RelativeLayout>